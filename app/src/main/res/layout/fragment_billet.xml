<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="org.pbreakers.mobile.getticket.viewmodel.BilletViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.fragment.BilletFragment">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".view.fragment.HomeFragment">

            <androidx.recyclerview.widget.RecyclerView
                android:background="#eaeaea"
                setAdapter="@{viewModel.adapter}"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <include
                android:visibility="@{viewModel.isEmptyData.get()}"
                layout="@layout/item_no_data" />
        </FrameLayout>

    </FrameLayout>
</layout>