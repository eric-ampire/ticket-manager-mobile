<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="org.pbreakers.mobile.getticket.viewmodel.DetailBilletViewModel" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:background="#eaeaea"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".view.fragment.DetailBilletFragment">

            <ImageView
                android:src="@drawable/qr_code"
                android:id="@+id/ivQrCodeBillet"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/ivQrCodeBillet">

                <androidx.cardview.widget.CardView
                    android:layout_marginLeft="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:textColor="@android:color/black"
                            android:textStyle="bold"
                            android:text="Information du Beneficiaire"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <LinearLayout
                            android:weightSum="4"
                            android:orientation="vertical"
                            android:layout_marginTop="@dimen/spacing_large"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:text="Nom Complet"
                                android:layout_marginBottom="4dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:layout_weight="2"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:paddingLeft="8dp"
                                android:gravity="left|center"
                                tools:text="Eric mpire"
                                android:text="@{viewModel.user.get().nomUtilisateur}"
                                android:background="@color/grey_5"
                                android:textColor="@color/grey_60" />

                        </LinearLayout>

                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_marginLeft="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:textColor="@android:color/black"
                            android:textStyle="bold"
                            android:text="Information du Billet"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <LinearLayout
                            android:weightSum="4"
                            android:orientation="vertical"
                            android:layout_marginTop="@dimen/spacing_large"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:text="Etat"
                                android:layout_marginBottom="4dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:layout_weight="2"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:paddingLeft="8dp"
                                android:gravity="left|center"
                                android:text="@{viewModel.etat.get()}"
                                android:background="@color/grey_5"
                                android:prompt="@string/provenance_prompte"
                                android:textColor="@color/grey_60" />

                        </LinearLayout>

                        <LinearLayout
                            android:weightSum="4"
                            android:orientation="vertical"
                            android:layout_marginTop="@dimen/spacing_large"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:text="Date"
                                android:layout_marginBottom="4dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                bindDate="@{viewModel.billet.dateBillet}"
                                android:layout_weight="2"
                                android:paddingLeft="8dp"
                                android:gravity="left|center"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:background="@color/grey_5"
                                android:prompt="@string/provenance_prompte"
                                android:textColor="@color/grey_60" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_marginLeft="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:textColor="@android:color/black"
                            android:textStyle="bold"
                            android:text="Information Voyage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <LinearLayout
                            android:weightSum="4"
                            android:orientation="vertical"
                            android:layout_marginTop="@dimen/spacing_large"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:text="Reference"
                                android:layout_marginBottom="4dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:layout_weight="2"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:paddingLeft="8dp"
                                android:gravity="left|center"
                                android:text="@{viewModel.voyage.get().referenceVoyage}"
                                android:background="@color/grey_5"
                                android:prompt="@string/provenance_prompte"
                                android:textColor="@color/grey_60" />

                        </LinearLayout>

                        <LinearLayout
                            android:weightSum="4"
                            android:orientation="vertical"
                            android:layout_marginTop="@dimen/spacing_large"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:text="Date Depart"
                                android:layout_marginBottom="4dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                bindDate="@{viewModel.voyage.get().dateDepart}"
                                android:layout_weight="2"
                                android:paddingLeft="8dp"
                                android:gravity="left|center"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:background="@color/grey_5"
                                android:textColor="@color/grey_60" />

                        </LinearLayout>

                        <LinearLayout
                            android:weightSum="4"
                            android:orientation="vertical"
                            android:layout_marginTop="@dimen/spacing_large"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:text="Heure Depart"
                                android:layout_marginBottom="4dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                bindTime="@{viewModel.voyage.get().heureDepart}"
                                android:layout_weight="2"
                                android:paddingLeft="8dp"
                                android:gravity="left|center"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:background="@color/grey_5"
                                android:textColor="@color/grey_60" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</layout>