                            android:id="@+id/lytExpandRole"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <EditText
                                android:inputType="textShortMessage"
                                android:id="@+id/edtNomRole"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginLeft="@dimen/spacing_large"
                                android:layout_marginRight="@dimen/spacing_large"
                                android:layout_marginTop="@dimen/spacing_large"
                                android:background="@color/grey_5"
                                android:gravity="center_vertical"
                                android:hint="@string/lbl_nom"
                                android:layout_margin="@dimen/spacing_large"
                                android:padding="@dimen/spacing_middle"
                                android:textColor="@color/grey_60" />


                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/grey_10" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:orientation="horizontal">

                                <Button
                                    android:id="@+id/btnHideRole"
                                    style="@style/Widget.MaterialComponents.Button.TextButton"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="@string/HIDE" />

                                <Button
                                    style="@style/Widget.MaterialComponents.Button.TextButton"
                                    android:id="@+id/btnEnregRole"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="@string/SAVE" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_medium"
                    android:layout_marginLeft="@dimen/spacing_middle"
                    android:layout_marginRight="@dimen/spacing_middle"
                    android:layout_marginTop="@dimen/spacing_medium"
                    android:visibility="visible"
                    app:cardCornerRadius="2dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/white"
                            android:gravity="center_vertical"
                            android:minHeight="?attr/actionBarSize"
                            android:orientation="horizontal">

                            <View
                                android:layout_width="@dimen/spacing_large"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Transit"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                android:textColor="@color/grey_80" />

                            <ImageButton
                                android:id="@+id/btnToggleTransit"
                                android:layout_width="?attr/actionBarSize"
                                android:layout_height="?attr/actionBarSize"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:tint="@color/grey_80"
                                app:srcCompat="@drawable/ic_expand_arrow" />

                        </LinearLayout>

                        <LinearLayout
                            android:visibility="gone"
                            android:id="@+id/lytExpandTransit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <EditText
                                android:inputType="textShortMessage"
                                android:id="@+id/edtNomTransit"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginLeft="@dimen/spacing_large"
                                android:layout_marginRight="@dimen/spacing_large"
                                android:layout_marginTop="@dimen/spacing_large"
                                android:background="@color/grey_5"
                                android:gravity="center_vertical"
                                android:hint="@string/lbl_nom"
                                android:layout_margin="@dimen/spacing_large"
                                android:padding="@dimen/spacing_middle"
                                android:textColor="@color/grey_60" />


                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/grey_10" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:orientation="horizontal">

                                <Button
                                    android:id="@+id/btnHideTransit"
                                    style="@style/Widget.MaterialComponents.Button.TextButton"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="@string/HIDE" />

                                <Button
                                    style="@style/Widget.MaterialComponents.Button.TextButton"
                                    android:id="@+id/btnEnregTransit"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="@string/SAVE" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_medium"
                    android:layout_marginLeft="@dimen/spacing_middle"
                    android:layout_marginRight="@dimen/spacing_middle"
                    android:layout_marginTop="@dimen/spacing_medium"
                    android:visibility="visible"
                    app:cardCornerRadius="2dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/white"
                            android:gravity="center_vertical"
                            android:minHeight="?attr/actionBarSize"
                            android:orientation="horizontal">

                            <View
                                android:layout_width="@dimen/spacing_large"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Utilisateur"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                android:textColor="@color/grey_80" />

                            <ImageButton
                                android:id="@+id/btnToggleUser"
                                android:layout_width="?attr/actionBarSize"
                                android:layout_height="?attr/actionBarSize"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:tint="@color/grey_80"
                                app:srcCompat="@drawable/ic_expand_arrow" />

                        </LinearLayout>

                        <LinearLayout
                            android:visibility="gone"
                            android:id="@+id/lytExpandUser"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <Spinner
                                android:id="@+id/edtRoleUser"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginLeft="@dimen/spacing_large"
                                android:layout_marginRight="@dimen/spacing_large"
                                android:layout_marginTop="@dimen/spacing_large"
                                android:background="@color/grey_5"
                                android:gravity="center_vertical"
                                setAdapter="@{roles}"
                                android:hint="Role"
                                android:layout_margin="@dimen/spacing_large"
                                android:padding="@dimen/spacing_middle"
                                android:textColor="@color/grey_60" />

                            <EditText
                                android:inputType="textShortMessage"
                                android:id="@+id/edtNomUser"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginLeft="@dimen/spacing_large"
                                android:layout_marginRight="@dimen/spacing_large"
                                android:layout_marginTop="@dimen/spacing_large"
                                android:background="@color/grey_5"
                                android:gravity="center_vertical"
                                android:hint="@string/lbl_nom"
                                android:layout_margin="@dimen/spacing_large"
                                android:padding="@dimen/spacing_middle"
                                android:textColor="@color/grey_60" />

                            <EditText
                                android:inputType="textShortMessage"
                                android:id="@+id/edtPseudoUser"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginLeft="@dimen/spacing_large"
                                android:layout_marginRight="@dimen/spacing_large"
                                android:layout_marginTop="@dimen/spacing_large"
                                android:background="@color/grey_5"
                                android:gravity="center_vertical"
                                android:hint="Pseudo"
                                android:layout_margin="@dimen/spacing_large"
                                android:padding="@dimen/spacing_middle"
                                android:textColor="@color/grey_60" />

                            <EditText
                                android:id="@+id/edtPasswordUser"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginLeft="@dimen/spacing_large"
                                android:layout_marginRight="@dimen/spacing_large"
                                android:layout_marginTop="@dimen/spacing_large"
                                android:inputType="textPassword"
                                android:background="@color/grey_5"
                                android:gravity="center_vertical"
                                android:hint="Mot de passe"
                                android:layout_margin="@dimen/spacing_large"
                                android:padding="@dimen/spacing_middle"
                                android:textColor="@color/grey_60" />

                            <EditText
                                android:inputType="textPassword"
                                android:id="@+id/edtPasswordConfirmUser"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginLeft="@dimen/spacing_large"
                                android:layout_marginRight="@dimen/spacing_large"
                                android:layout_marginTop="@dimen/spacing_large"
                                android:background="@color/grey_5"
                                android:gravity="center_vertical"
                                android:hint="Confirmation"
                                android:layout_margin="@dimen/spacing_large"
                                android:padding="@dimen/spacing_middle"
                                android:textColor="@color/grey_60" />


                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/grey_10" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
