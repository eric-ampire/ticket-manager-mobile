                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:tint="@color/grey_80"
                                app:srcCompat="@drawable/ic_expand_arrow" />

                        </LinearLayout>

                        <LinearLayout
                            android:visibility="gone"
                            android:id="@+id/lytExpandBus"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <EditText
                                android:inputType="textShortMessage"
                                android:id="@+id/edtNomBus"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginLeft="@dimen/spacing_large"
                                android:layout_marginRight="@dimen/spacing_large"
                                android:layout_marginTop="@dimen/spacing_large"
                                android:background="@color/grey_5"
                                android:gravity="center_vertical"
                                android:hint="@string/lbl_nom"
                                android:layout_margin="@dimen/spacing_large"
                                android:padding="@dimen/spacing_middle"
                                android:textColor="@color/grey_60" />



                            <EditText
                                android:inputType="number"
                                android:id="@+id/edtSiegeBus"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginLeft="@dimen/spacing_large"
                                android:layout_marginRight="@dimen/spacing_large"
                                android:layout_marginTop="@dimen/spacing_large"
                                android:background="@color/grey_5"
                                android:gravity="center_vertical"
                                android:hint="Siege"
                                android:layout_margin="@dimen/spacing_large"
                                android:padding="@dimen/spacing_middle"
                                android:textColor="@color/grey_60" />

                            <EditText
                                android:id="@+id/edtRangerBus"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginLeft="@dimen/spacing_large"
                                android:layout_marginRight="@dimen/spacing_large"
                                android:layout_marginTop="@dimen/spacing_large"
                                android:inputType="number"
                                android:background="@color/grey_5"
                                android:gravity="center_vertical"
                                android:hint="Ranger"
                                android:layout_margin="@dimen/spacing_large"
                                android:padding="@dimen/spacing_middle"
                                android:textColor="@color/grey_60" />

                            <Spinner
                                android:id="@+id/spinnerAgencyBus"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginLeft="@dimen/spacing_large"
                                android:layout_marginRight="@dimen/spacing_large"
                                android:layout_marginTop="@dimen/spacing_large"
                                android:background="@color/grey_5"
                                android:gravity="center_vertical"
                                setAdapter="@{agences}"
                                android:layout_margin="@dimen/spacing_large"
                                android:padding="@dimen/spacing_middle"
                                android:textColor="@color/grey_60" />


                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/grey_10" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:orientation="horizontal">

                                <Button
                                    android:id="@+id/btnHideBus"
                                    style="@style/Widget.MaterialComponents.Button.TextButton"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="@string/HIDE" />

                                <Button
                                    style="@style/Widget.MaterialComponents.Button.TextButton"
                                    android:id="@+id/btnEnregBus"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="@string/SAVE" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>
</layout>

